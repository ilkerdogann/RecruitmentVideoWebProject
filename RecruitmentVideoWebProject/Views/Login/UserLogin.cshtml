@model EntityLayer.Concrete.User

@{
    Layout = null;
}

<!doctype html>
<html class="no-js" lang="ru">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Video Ilker</title>
    <meta name="description" content="">
    <link rel="manifest" href="site.webmanifest">
    <link rel="icon" href="/favicon.png">
    <link rel="apple-touch-icon" href="../icon.png">

    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,300i,400,500,600" rel="stylesheet">

    <link href="~/Template/Themes/HTML/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Template/Themes/HTML/icons/icomoon.css">
    <link rel="stylesheet" href="~/Template/Themes/HTML/icons/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/Template/Themes/HTML/css/plugins.css">
    <link rel="stylesheet" href="~/Template/Themes/HTML/css/main.css">
    <link rel="stylesheet" href="~/Template/Themes/HTML/css/style.css">
    <link rel="stylesheet" href="~/Template/Themes/HTML/dist/css/swiper.min.css">
</head>
<body>
    <div class="page-content">
        <nav id="main-nav" class="main-nav fixed">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="nav-header d-flex justify-content-between align-items-center">
                        </div>
                        <div class="nav-header d-flex justify-content-between align-items-center">
                            <ul id="nav" class="nav-wrap__list menu">
                                <li class="current"><a href="/" title="Ana Sayfa">Video Ilker</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <span class="no-intro"></span>
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-9">
                    <span class="name-rog">
                        <div class="hr-line"></div> KULLANICI GİRİŞİ
                    </span>

                    @using (Html.BeginForm("UserLogin", "Login", FormMethod.Post))
                    {
                        <div class="section-how">
                            <span class="num-1">
                                <i class="fa fa-user-circle" aria-hidden="true"></i>
                            </span>
                            <div class="reved">
                                <div class="arrow-road"></div>
                                <span class="name-form">
                                    Kullanıcı Adı
                                </span>
                                <input type="text" name="UserName" id="name" placeholder="Kullanıcı Adı" class="registration_short_field" />
                            </div>
                        </div>

                        <div class="section-how">
                            <span class="num-2">
                                <i class="fa fa-key" aria-hidden="true"></i>
                            </span>
                            <div class="reved">
                                <div class="arrow-road"></div>
                                <span class="name-form">
                                    Şifre
                                </span>
                                <input type="password" name="Password" id="password" placeholder="Şifre" class="registration_short_field" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label" for="gridCheck">
                                    Unutma Bunları Sorucam Sonra
                                </label>
                            </div>
                            <br />
                            <button style="background-color:salmon" type="button" onclick="location='/Login/Index'" class="btn btn-warning">Bilgilerimi Unuttum</button>
                            <button style="background-color:darkorange" class="btn btn-warning">Giriş Yap</button>
                            <button style="background-color:cornflowerblue" type="button" onclick="location='/Register/UserRegister'" class="btn btn-warning">Kayıt Ol</button>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
    <script src="/dist/js/swiper.min.js"></script>
    <script>
        var swiper = new Swiper('.swiper-container', {
            spaceBetween: 30,
            hashNavigation: {
                watchState: true,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    </script>
    <script src="~/Template/Themes/HTML/js/jquery.min.js"></script>
    <script src="~/Template/Themes/HTML/js/circle-progress.js"></script>
    <script src="~/Template/Themes/HTML/js/examples.js"></script>
    <script src="~/Template/Themes/HTML/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="~/Template/Themes/HTML/js/vendor/jquery-3.2.1.min.js"></script>
    <script src="~/Template/Themes/HTML/js/plugins.js"></script>
    <script src="~/Template/Themes/HTML/js/main.js"></script>
</body>
</html>


